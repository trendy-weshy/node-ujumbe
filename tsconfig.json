{
    "compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": true,
		"noEmitOnError": true,
		"suppressImplicitAnyIndexErrors": true,
		"removeComments": true,
        "preserveConstEnums": true,
        "alwaysStrict": true,
        "pretty": true,
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": false,
        "lib": [
            "es2015",
            "es2015.promise",
            "es5"
        ],
        "types": [
            "node",
            "mocha"
        ]
    },
    "exclude": [
        "node_modules",
        "samples",
        "**/*.js"
    ],
    "files": [
        "api.ts",
        "sms.ts",
        "index.ts"
    ],
    "include": [
        "test"
    ]
}